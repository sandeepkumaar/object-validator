{
  "name": "@sknk/object-validator",
  "version": "1.0.2",
  "description": "function argument and Schema validator, composable predicates, customizable errors, extends with external validation libraries - minimal footprint",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc",
    "test": "node --test src/**/*.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run lint && npm run typecheck"
    }
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "try-catch": "^3.0.1",
    "typescript": "^5.3.3"
  },
  "author": "sandeepkumaar.c",
  "license": "ISC",
  "keywords": [
    "schema",
    "argument",
    "object",
    "type guards",
    "validator",
    "object-validator",
    "compose",
    "zero dependencies"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sandeepkumaar/object-validator"
  }
}
